<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.efrainmg90.agendaapp.activities.AppointmentListActivity">

    <ListView
        android:id="@+id/lvAppointmentsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/title_empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/empty_list"
        android:textAlignment="center"
        android:textSize="21dp" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_calendar_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/action_bar_add"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        app:fabSize="normal"/>
</RelativeLayout>
