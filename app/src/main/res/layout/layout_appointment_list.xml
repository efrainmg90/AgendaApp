<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/appointmen_border_style"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/appointment_border_background">

            <TextView
                android:id="@+id/txvTitleList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="30dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txvDescriptionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvTitleList"
                android:gravity="right"
                android:textSize="20dp"
                android:text="TextView"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imvIconDate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/txvDescriptionList"
                android:layout_toLeftOf="@+id/txvDateList"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/txvDateList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txvDescriptionList"
                android:layout_marginEnd="13dp"
                android:text="TextView" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>